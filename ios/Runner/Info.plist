<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>Xception</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>Xception</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleSignature</key>
    <string>????</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>

    <key>FirebaseAppDelegateProxyEnabled</key>
    <true/>

    <key>KeychainAccessGroups</key>
    <array>
        <string>$(AppIdentifierPrefix)$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    </array>

    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>tel</string>
    </array>

    <key>LSRequiresIPhoneOS</key>
    <true/>

    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <key>NSBonjourServices</key>
    <array>
        <string>_dartobservatory._tcp</string>
    </array>

    <!-- Camera -->
    <key>NSCameraUsageDescription</key>
    <string>Xception uses the camera so you can take photos or videos of issues (for example, a maintenance problem) and attach them to your service requests.</string>

    <!-- Local Network -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>This app uses the local network to communicate with nearby devices and services.</string>

    <!-- Location: WHEN IN USE only -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>Xception uses your location while you are using the app to detect your community and show nearby services and vendors on the map.</string>

    <!-- Location: Always + When In Use (required by Apple tools, even if not used) -->
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>Xception may access your location to detect your community and show nearby services and vendors, such as during an active service request, even if the app is running in the background.</string>

    <!-- Photo Library -->
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>Xception may save photos or videos you capture in the app to your library if you choose to download or save them.</string>

    <key>NSPhotoLibraryUsageDescription</key>
    <string>Xception needs access to your photo library so you can select and upload images or videos related to your service requests.</string>

    <!-- Push Notifications -->
    <key>NSPushNotificationsUsageDescription</key>
    <string>We use notifications to keep you updated with important service updates and requests.</string>

    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>

    <!-- Background modes (no location) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>
        <string>remote-notification</string>
    </array>

    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>

    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UISupportedInterfaceOrientations~ipad</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>UIUserNotificationSettings</key>
    <true/>

    <!-- Stripe URL Scheme -->
    <key>CFBundleURLTypes</key>
    <array>
      <dict>
        <key>CFBundleURLSchemes</key>
        <array>
          <string>stripeflutter</string>  <!-- must match Stripe.urlScheme -->
        </array>
      </dict>
    </array>
</dict>
</plist>